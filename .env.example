# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Trading Configuration
TRADING_MODE=testnet  # Options: testnet, live
TRADE_ENABLED=false  # Set to true to enable actual trading

# Database Configuration
DATABASE_URL=sqlite:///data/trading_signals.db

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Risk Management
MAX_POSITION_SIZE=0.01  # Maximum position size as percentage of portfolio
STOP_LOSS_PERCENTAGE=2.0  # Stop loss percentage
TAKE_PROFIT_PERCENTAGE=5.0  # Take profit percentage
